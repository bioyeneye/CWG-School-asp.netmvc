@using Microsoft.AspNet.Identity
@model StudentManagementSystem.Models.Application.ApplicationForm

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-2" style="">
        <h2>Create</h2>
        <h4>Application Form</h4>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="col-md-10 col-md-offset-2 " style="">
                @Html.ValidationSummary(false, "", new { @class = "text-danger alert-danger" })
                </div>

                @Html.HiddenFor(model => model.StudentId, new {@value = @User.Identity.GetUserId()})

                <div class="form-group">
                    @Html.LabelFor(model => model.DepartmentId, "DepartmentId", htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("DepartmentId", null, htmlAttributes: new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.DepartmentId, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AboutYou, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.AboutYou, new {@class = "form-control", @rows = "10"})                       
                    </div>
                </div>

                <input data-val="true" data-val-number="The field StudentId must be a number." data-val-required="The StudentId field is required." id="StudentId" name="StudentId" type="hidden" value="1">

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
    }

</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
