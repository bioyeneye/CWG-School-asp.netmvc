@model StudentManagementSystem.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="simple-page-logo animated swing">
    <a href="/">
        <span><i class="fa fa-gg"></i></span>
        <span>CWG School</span>
    </a>
</div><!-- logo -->
<div class="simple-page-form animated flipInY" id="signup-form">
    <h4 class="form-title m-b-xl text-center">Sign Up For a new Account</h4>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "", role = "form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new {@class = "text-danger alert-danger"})

        <div class="form-group">
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control", @placeholder = "Student Fullname"})
        </div>

        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @placeholder = "Email"})
        </div>        

        <div class="form-group">
            @Html.TextBoxFor(m => m.Address, new {@class = "form-control", @placeholder = "Address"})
        </div>

        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "Password"})
        </div>

        <div class="form-group">
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", @placeholder = "Confirm password"})
        </div>
        
        @Html.HiddenFor(m => m.UserType, new {@value = "0"})

        <input type="submit" class="btn btn-primary" value="Register">
    }

</div>
<div class="simple-page-footer">
    <p>
        <small>Do you have an account ?</small>
        @Html.ActionLink("Log in", "Login", "Account")
    </p>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
