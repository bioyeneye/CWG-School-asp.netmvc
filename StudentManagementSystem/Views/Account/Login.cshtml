@using StudentManagementSystem.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="simple-page-logo animated swing">
    <a href="/">
        <span><i class="fa fa-gg"></i></span>
        <span>CWG School</span>
    </a>
</div><!-- logo -->
<div class="simple-page-form animated flipInY" id="login-form">
    <h4 class="form-title m-b-xl text-center">Sign In With Your CWG School Account</h4>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form", @style = "" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new
        {
            @class = "text-danger alert-danger", @style = ""
        
        })
        <div class="form-group">            
            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @placeholder = "Email"})            
        </div>

        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })            
        </div>
        
        @*<div class="form-group m-b-xl">
			<div class="checkbox checkbox-primary">
                <input type="checkbox" id="RememberMe" name="RememberMe" />
                <label for="RememberMe">Keep me signed in</label>
			</div>
		</div>*@
        
        
        
        <input type="submit" class="btn btn-primary" value="Log in">
    }
</div><!-- #login-form -->

<div class="simple-page-footer">
@*    <p>@Html.ActionLink("FORGOT YOUR PASSWORD ?", "ForgotPassword")</p>*@
    <p>
        <small>Don't have an account ?</small>
        @Html.ActionLink("CREATE AN ACCOUNT", "Register")
    </p>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}