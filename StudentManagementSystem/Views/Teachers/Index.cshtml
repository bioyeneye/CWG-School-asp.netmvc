@model IEnumerable<StudentManagementSystem.Models.Application.Teacher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>List of teachers</h3>

<div class="row">
    
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6">
                <div class="widget">
                    <header class="widget-header">
                        <h4 class="widget-title">@Html.ActionLink(@item.Name.ToUpper(), "Details", new { id = item.Id })</h4>
                    </header><!-- .widget-header -->
                    <hr class="widget-separator">
                    <div class="widget-body p-h-lg">
                        <div class="media">
                            <div class="media-body">
                                <h4 class="media-heading">@item.Department.Name</h4>
                                <small class="media-meta">@item.Email</small>
                                <br />
                                <small class="media-meta">@item.MobileNumber</small>
                            </div>
                        </div>
                    </div><!-- .widget-body -->
                </div><!-- .widget -->
            </div>
        }
    }
    else
    {
        <p>No Teacher yet, Add a teacher</p>
    }
</div>
